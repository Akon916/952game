@import "nib"
html
	font: 14px "microsoft yahei",Arial,Helvetica,sans-serif
	
body	
	background #f7f7f7 
	color #333
	
a
	color #222
	text-decoration none
	font-size 14px
	&:hover
		color #36a9e2
fieldset
	margin 0 
	border 1px solid #ccc
	border-radius 4px
	
img
	margin 0
	padding 0
	width 100%
	height auto	
	
button,input
	outline 0
	border 0
	
ul,li
	list-style none
	
legend
	color #b3b3b3
	
.clearfix
	zoom 1
	
.font-hid
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	word-wrap normal
.section_left_list:nth-child(7)
	background #ddd
.num
	color #ff253f	
.left
	float left	
.right
	float right	
.avator
	float: left;
	display:block
	margin-right: 20px;
	width: 64px;
	height: 64px;
	border-radius: 50%;
.right-bor
	border-right none!important		
.small
	width 120px
	height 35px
	line-height 35px
	text-align center	
#section_right
	float right
	box-sizing border-box
	padding 20px 20px 140px
	width 750px
	height 100%
	background #fff
	#section_right_top
		width 100%
		height 60px
		border-bottom 1px solid #eee
		text-indent 10px
		line-height 60px
		>h3
			float left
	#section_right_bottom
		#right_one
			padding 10px
			width 100%
			#select-book
				width 100%
				&:after
					content ""
					display block
					clear both
				span
					display block
					float left
					color #999;
					width 70px
					height 25px
					text-align right
					line-height 24px
				ul
					margin-left 10px
					width 500px
					float left
					overflow hidden
					list-style none
					li
						a
							float left
							padding 5px
							background #eee
							margin-right 10px
							margin-bottom 5px
							font-size 13px
							&:hover
								color #333
						.active
							background #6aa4d5		
			.row-tag
				&:after
					content ""
					display block
					clear both
				span
					display block
					float left
					color #999;
					width 70px
					height 25px
					text-align right
					line-height 24px
				#article-list
					margin-left 10px
					width 500px
					float left
					overflow hidden
					list-style none	
					a
						float left
						display block
						background #eee
						margin-right 10px
						margin-bottom 5px
						width 62px
						height 25px
						line-height 25px
						text-align center
						&:hover
							color #333
					.active
						background #6aa4d5		
							
		#right_two
			margin-top 20px
			margin-bottom -20px
			border 1px solid #ededed
			border-bottom none
			.cgnum
				margin-top 20px
				height 60px
				padding-left 20px
				.cgnum-icon
					img
						width 60px
						height 60px
						border-radius 50%
				.cgnum-content
					position relative
					width 295px
					height 60px
					margin-left 15px
					padding-left 15px
					padding-top 10px
					border 1px solid #ededed
					border-radius 1px
					font-size 14px
					color #333
					background #f3f3f3
					p
						line-height 20px
			.cgnotice
				height 50px
				line-height 50px
				color #999
				padding-left 20px
				span:nth-child(1)
					width 75px
					float left
				.empty
					display block
					color #999
					width 450px
					float left
				.cgnotice-btn
					float right
					margin-right 10px
					margin-left: 30px
					margin-top: 10px
					height: 24px
					line-height: 24px
					padding: 0 15px
					font-size: 12px
					border-radius: 3px
					background: #f34c5e
					color: #fff		
			.mh-list
				margin 20px 0
				border 1px solid #ededed
				font-size 12px
				line-height 14px
				background-color #fff
				&:after
					content ""
					display block
					clear both
				>div
					margin-bottom: -1px
					border-bottom: 1px solid #ededed
					padding: 20px 20px 15px
					p
						line-height 16px
				.item
					display: block
					float: left
					border-right: 1px solid #ededed
					border-bottom: 1px solid #ededed
					width 33.333333%
					height 100px
					box-sizing border-box
					.avator
						float: left
						display:block
						margin-right: 20px
						width: 64px
						height: 64px
						border-radius: 50%
					.content
						width 100px
						float left
						p
							font-size: 12px
							line-height: 14px
							.top
								padding: 8px 0
								font-size: 14px
								line-height: 14px
								color: #121212

