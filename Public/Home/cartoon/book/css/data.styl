@import "nib"
html
	font: 14px "microsoft yahei",Arial,Helvetica,sans-serif
	
body	
	background #f7f7f7 
	color #333
	
a
	color #222
	text-decoration none
	font-size 14px
	&:hover
		color #36a9e2
fieldset
	margin 0 
	border 1px solid #ccc
	border-radius 4px
	
img
	margin 0
	padding 0
	width 100%
	height auto	
	
button,input
	outline 0
	border 0
	
ul,li
	list-style none
	
legend
	color #b3b3b3
th,td
		text-align -internal-center
		padding 10px
		text-align: center;
		border solid 1px #ededed
		color #333
.clearfix
	zoom 1
	
.font-hid
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	word-wrap normal
.section_left_list:nth-child(8)
	background #ddd
.active
	background #6aa4d5!important
.mh-panel-heading	
	border-bottom:1px solid #EDEDED
	background-color #FCFCFC
	color #B1B1B1
	font-size 1rem
	margin 0
	line-height 2.85714rem
	padding-left 1.14286rem
	font-weight: 400;
#section_right
	float right
	box-sizing border-box
	padding 20px 20px 140px
	width 750px
	height 100%
	background #fff
	#section_right_top
		width 100%
		height 60px
		border-bottom 1px solid #eee
		text-indent 10px
		line-height 60px
		>h3
			float left
	#section_right_bottom
		padding 10px
		width 100%
		box-sizing border-box
		#select-book
			width 100%
			box-sizing border-box
			span
				display inline-block
				width 70px
				padding 5px
				text-align left
				vertical-align top
			ul
				display inline-block
				width 500px
				
				li	
					display inline-block
					padding 5px 10px
					background #ededed
					margin-right 10px
					margin-bottom 10px
					a
						font-size 12px
						display block
						width 100%
						height 100%
						&:hover
							color #333
		.mh-panel
			border 1px solid #EDEDED
			margin-bottom 20px
			margin-top 20px
			.chart-area
				height 400px
				width 100%
				.sp-nodata
					text-align center
					line-height 400px
					a
						color #008CBA
						