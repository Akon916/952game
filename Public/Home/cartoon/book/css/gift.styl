@import "nib"
html
	font: 14px "microsoft yahei",Arial,Helvetica,sans-serif
	
body	
	background #f7f7f7 
	color #333
	
a
	color #222
	text-decoration none
	font-size 14px
	&:hover
		color #36a9e2
fieldset
	margin 0 
	border 1px solid #ccc
	border-radius 4px
	
img
	margin 0
	padding 0
	width 100%
	height auto	
	
button,input
	outline 0
	border 0
	
ul,li
	list-style none
	
legend
	color #b3b3b3
th,td
		text-align -internal-center
		padding 10px
		text-align: center;
		border solid 1px #ededed
		color #333
.clearfix
	zoom 1
	
.font-hid
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	word-wrap normal
.section_left_list:nth-child(4)
	background #ddd
.active
	background #fff!important	
.mh-table-nowrap
	white-space nowrap	
.mh-table
	td	
		text-align center
		border 1px solid #ededed
#section_right
	float right
	box-sizing border-box
	padding 20px 20px 140px
	width 750px
	height 100%
	background #fff
	#section_right_top
		width 100%
		height 60px
		border-bottom 1px solid #eee
		text-indent 10px
		line-height 60px
		>h3
			float left
		
	#section_right_bottom
		padding 10px
		width 100%
		box-sizing border-box
		.tabs
			border-bottom 1px solid #ededed
			width 100%
			height 45px
			padding-left 10px
			border-box border-box
			li
				padding 16px 18px
				float left
				background #ededed
				margin-right 10px
				border-top-left-radius 8px
				border-top-right-radius 8px
				border-top 1px solid #ededed
				border-left 1px solid #ededed
				border-right 1px solid #ededed	
				a
					display block
					width 100%
					height 100%
					&:hover
						color #333
						
		.mh-table
			background #fff
			min-width 100%
			margin-top 20px
			border solid 1px #ededed
			table-layout auto
			border-collapse collapse
			border-spacing 0	
			
			&:before
				clear both			