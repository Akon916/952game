@import "nib"
html
	font: 14px "microsoft yahei",Arial,Helvetica,sans-serif
	
body	
	background #f7f7f7 
	color #333
	
a
	color #222
	text-decoration none
	font-size 14px
	&:hover
		color #36a9e2
fieldset
	margin 0 
	border 1px solid #ccc
	border-radius 4px
	
img
	margin 0
	padding 0
	width 100%
	height auto	
	
button,input
	outline 0
	border 0
	
ul,li
	list-style none
	
legend
	color #b3b3b3
th,td
		text-align -internal-center
		padding 10px
		text-align: center;
		border solid 1px #ededed
		color #333
.clearfix
	zoom 1
	
.font-hid
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	word-wrap normal
.section_left_list:nth-child(3)
	background #ddd
.val
	color #666	
.active
	background #fff!important
table
	background: #fff
	margin-bottom: 1.42857rem
	border: solid 1px #ededed
	table-layout: auto
	border-collapse: collapse;
	border-spacing: 0;
thead
	display table-header-group
	vertical-align middle
	border-color inherit	
#section_right
	float right
	box-sizing border-box
	padding 20px 20px 140px
	width 750px
	height 100%
	background #fff
	#section_right_top
		width 100%
		height 60px
		border-bottom 1px solid #eee
		text-indent 10px
		line-height 60px
		>h3
			float left
	#section_right_bottom
		padding 10px
		width 100%
		box-sizing border-box
		.panel-body
			margin-top 25px
			>div
				width 100%
				line-height 20px
				margin-bottom 10px
		.tabs
			width 100%
			height 45px
			margin-top 20px
			border-bottom 1px solid #ededed
			li	
				float left
				border-top 1px solid #ededed
				border-right 1px solid #ededed
				border-left 1px solid #ededed
				border-top-left-radius 8px
				border-top-right-radius 8px
				margin 0 10px
				padding 16px 20px
				box-sizing border-box
				background #ededed
				a
					display block
					width 100%
					&:hover
						color #333
					
		.mh-tabs-content
			width 100%
			padding 25px 0
			.js-time
				width 70px
				padding 2px
				margin 0
				height 25px
				font-size 10px
				outline none
				border-color #ededed
				
						

			.mh-body
				margin-top 8px
				width 100%	
				table
					width 100%
					thead
						tr
							height 45px
							th
								vertical-align middle
							th:nth-child(1)
								position relative
								.col-title-right
									position absolute
									right 10px
									top 5px
								.col-title-left
									position absolute
									left 10px
									bottom	5px	
					tbody
						tr
							td:nth-child(1)
								a
									color #008CBA				